<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.TimetableFragment"
    android:background="@drawable/bg">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/time"
                android:text="08:30-10:00"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/lesson"
                android:layout_marginLeft="10dp"
                android:text="28°F" >
            </TextView>


        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/time2"
                android:text="10:15-11:45"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/lesson2"
                android:layout_marginLeft="10dp"
                android:text="28°F" >
            </TextView>


        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/time3"
                android:text="12:00-13:30"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/lesson3"
                android:layout_marginLeft="10dp"
                android:text="28°F" >
            </TextView>


        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/time4"
                android:text="14:00-15:30"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/lesson4"
                android:layout_marginLeft="10dp"
                android:text="28°F" >
            </TextView>


        </TableRow>
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/time5"
                android:text="15:45-17:15"
                android:textStyle="bold" >
            </TextView>

            <ListView
                android:id="@+id/lesson5"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:maxLength="64"
                android:text="">

            </ListView>


        </TableRow>
        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/time6"
                android:text="17:30-19:00"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/lesson6"
                android:layout_marginLeft="10dp"
                android:text="28°F" >
            </TextView>


        </TableRow>

    </TableLayout>
</RelativeLayout>